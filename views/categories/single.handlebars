<div class="jumbotron single-category">

  <div class="row">
    <div class="col-xs-4">
      <div class="thumbnail">
      <img src="/assets/images/uploads/{{category.image}}" class="category-image" />
      </div>
    </div>
    <div class="col-xs-8">
      <h2 class="category-title">{{category.name}}</h2>
      <p class="category-desc">{{category.description}}</p>
    </div>

  </div>
</div>